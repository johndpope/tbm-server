<div class="top <%= 'no_inviter' if @inviter.blank? %>">
  <% if @inviter %>
    <div class="salutation">Hi,</div>
    <div class="message">I sent you a message on <%= APP_CONFIG[:app_name] %></div>
    <div class="closing">~ <%= @inviter.fullname %></div>
    <%= link_to image_tag("down-arrow.png"), @store_url %>
  <% else %>
    <%= link_to image_tag("zazo-type.png"), @store_url %>
  <% end %>
</div>

<div class="middle">
  <button onclick="window.location='<%= @store_url %>'" class="get_btn">Get the App!</button>
  <div class="text_download">Download Zazo now</div>
  <%= link_to image_tag("apple-store-badge.png"), APP_CONFIG[:iphone_store_url],  class: "store_icon"%>
  <%= link_to image_tag("google-play-badge.png"), APP_CONFIG[:android_store_url],  class: "store_icon"%>
</div>

<div class="bottom">
  <%= link_to image_tag("zazo-type.png"), @store_url %>
  <div class="tagline">There ain't nothing like it.</div>
</div>
